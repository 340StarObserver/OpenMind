<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false" >
        <!--卡片item布局格式-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:id="@+id/linearLayout"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="false"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp">

                <!---  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/person"/>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="20sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/fa_refresh"
                    android:id="@+id/fa_refresh"
                    android:layout_gravity="left|center_vertical" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:textColor="#666666"
                    android:layout_marginStart="10dp"
                    android:text="同步数据"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layerType="software"
                android:layout_width="fill_parent"
                android:background="@drawable/dashed_line_shape"
                android:layout_height="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="0dp"
                android:layout_alignParentStart="false"
                android:id="@+id/view"
                android:layout_below="@+id/linearLayout" >
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_below="@+id/view"
                android:id="@+id/LinearLayout2">
                <!--   <ImageView
                      android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/star"/> -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="20sp"
                    android:layout_marginStart="15dp"
                    android:text="@string/fa_trash_o"
                    android:id="@+id/fa_trash_o"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left|center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />
                <TextView
                    android:id="@+id/delete_data"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:textColor="#666666"
                    android:text="清空本地数据"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <View
                android:layerType="software"
                android:background="@drawable/dashed_line_shape"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="0dp"
                android:layout_alignParentStart="false"
                android:id="@+id/view2"
                android:layout_below="@+id/LinearLayout2" >
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_below="@+id/view2"
                android:id="@+id/LinearLayout3"
                android:layout_marginBottom="5dp">
                <!--   <ImageView
                      android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/star"/> -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="20sp"
                    android:layout_marginStart="15dp"
                    android:text="@string/fa_moon_o"
                    android:id="@+id/fa_moon_o"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left|center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />
                <TextView
                    android:id="@+id/night_mode"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:textColor="#666666"
                    android:text="夜间模式"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出当前用户"
        android:id="@+id/button"
        android:layout_below="@+id/card_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/logout_btn_shape" />

</RelativeLayout>