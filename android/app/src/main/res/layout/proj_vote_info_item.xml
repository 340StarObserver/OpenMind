<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false">
        <!--卡片item布局格式-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <HorizontalScrollView
                android:id="@+id/cardviewitem_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--   <ImageView
                          android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/star"/> -->
                    <TextView
                        android:id="@+id/fa_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="@string/fa_star"
                        android:textColor="#336699"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/cardviewitem_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:maxLines="1"
                        android:text="Aodobe illustrator"
                        android:textColor="#336699"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/cardviewitem_kongge1"
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:background="#ffffff"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="label"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/cardviewitem_label1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/label_shape"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="label"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/cardviewitem_kongge"
                        android:layout_width="9dp"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="label"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/cardviewitem_label2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/label_shape"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="label"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />

                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp"
                android:background="#bbbbbb" />

            <TextView
                android:id="@+id/cardviewitem_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/cardviewitem_header"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:maxLines="5"
                android:text="Adobe illustrator是一种应用于出版、多媒体和在线图像的工业标准矢量插画的软件，作为一款非常好的图片处理工具，Adobe Illustrator广泛应用于印刷出版、海报书籍排版、专业插..."
                android:textColor="#666666" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardviewitem_desc"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/cardviewitem_kongge5"
                    android:layout_width="13dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="label"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
                <!---  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/person"/>-->
                <TextView
                    android:id="@+id/fa_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_user" />

                <TextView
                    android:id="@+id/cardviewitem_kongge4"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="label"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:text="作者"
                    android:textColor="#c2c2c2"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cardviewitem_kongge3"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="label"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />

                <RelativeLayout
                    android:id="@+id/praiserelativeLayout"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/vote_btn_shape"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/fa_thumbs_up"
                        android:textColor="#336699"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/textView3"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="126"
                        android:textColor="#336699"
                        android:textSize="15sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:background="#00000000"
                    android:gravity="end"
                    android:text="2016-8-22"
                    android:textColor="#c2c2c2"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>